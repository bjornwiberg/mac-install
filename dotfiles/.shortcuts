alias vi='nvim'
alias vim='nvim'

alias rz='source ~/.zshrc'
alias vimz='nvim ~/.zshrc'

alias hosts='sudo vi /etc/hosts'
alias aliases='vi ~/.aliases'

alias gs='git status'
alias ga='git add'
alias gac='git add -A && git commit -m'
alias gap='git add -p'
alias gb='git branch'
alias gbd='git branch | grep -v "main" | xargs git branch -D'
alias gc='git commit -m'
alias gca='git commit --amend --no-edit'
alias gd='git diff'
alias gdc='git diff --cached'
alias gco='git checkout'
alias gr='git reset'
alias gl='git log'
alias gpom='git pull origin main'
alias pull='git pull'
alias push='git push'
alias sites='cd && cd Sites'

alias z='yarn'
